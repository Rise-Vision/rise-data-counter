{
  "verbose": true,
  "npm": true,
  "moduleResolution": "node",
  "plugins": {
    "local": {
      "browsers": ["chrome"]
    },
    "istanbul": {
      "reporters": ["text", "text-summary", "lcov"],
      "include": [
        "**/src/**/*.js"
      ],
      "exclude": [
        "**/test/**"
      ],
      "thresholds": {
        "global": {
          "branches": 85,
          "lines": 92,
          "functions": 92,
          "statements": 92
        }
      }
    }
  }
}
